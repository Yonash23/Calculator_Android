<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/clearBT"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="4dp"


                android:background="@drawable/elipsegrey"
                android:onClick="clearBT"
                android:text="@string/clear"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/plusMinBT"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="4dp"


                android:background="@drawable/elipsegrey"
                android:onClick="plusMinusBT"
                android:text="@string/plusMinus"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/expBT"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="4dp"

                android:background="@drawable/elipsegrey"
                android:onClick="expBT"
                android:text="@string/exp"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/devideBT"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="4dp"

                android:background="@drawable/elipseblue"
                android:backgroundTint="#A3C1E0"
                android:onClick="devideBT"
                android:text="@string/divide"
                android:textColor="#000000"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/sevenBT"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="4dp"

                android:background="@drawable/elipse"
                android:onClick="sevenBT"
                android:text="@string/seven"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/eightBT"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="4dp"

                android:background="@drawable/elipse"
                android:onClick="eightBT"
                android:text="@string/eight"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/nineBT"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="4dp"

                android:background="@drawable/elipse"
                android:onClick="nineBT"
                android:text="@string/nine"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/multBT"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="4dp"

                android:background="@drawable/elipse"
                android:backgroundTint="#A3C1E0"
                android:onClick="multBT"
                android:text="@string/multiply"
                android:textColor="#000000"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/fourBT"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="4dp"

                android:background="@drawable/elipse"
                android:onClick="fourBT"
                android:text="@string/four"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/fiveBT"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="4dp"

                android:background="@drawable/elipse"
                android:onClick="fiveBT"
                android:text="@string/five"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/sixBT"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="4dp"

                android:background="@drawable/elipse"
                android:onClick="sixBT"
                android:text="@string/six"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/subBT"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="4dp"

                android:background="@drawable/elipse"
                android:backgroundTint="#A3C1E0"
                android:onClick="subBT"
                android:text="@string/subtract"
                android:textColor="#000000"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/oneBT"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="4dp"

                android:background="@drawable/elipse"
                android:onClick="oneBT"
                android:text="@string/one"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/twoBT"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="4dp"

                android:background="@drawable/elipse"
                android:onClick="twoBT"
                android:text="@string/two"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/threeBT"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="4dp"

                android:background="@drawable/elipse"
                android:onClick="threeBT"
                android:text="@string/three"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/addBT"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="4dp"

                android:background="@drawable/elipse"
                android:backgroundTint="#A3C1E0"
                android:onClick="addBT"
                android:text="@string/add"
                android:textColor="#000000"

                android:textSize="20sp" />

        </TableRow>

    </TableLayout>


    <Button
        android:id="@+id/zeroBT"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="178dp"
        android:layout_height="85dp"
        android:layout_margin="5dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/elipse"
        android:onClick="zeroBT"
        android:text="@string/zero"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <Button
        android:id="@+id/equalBT"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_margin="5dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/elipse"
        android:backgroundTint="#A3C1E0"
        android:onClick="equalBT"
        android:text="@string/equals"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <Button
        android:id="@+id/komaBT"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_margin="5dp"

        android:layout_marginTop="4dp"
        android:background="@drawable/elipse"
        android:onClick="komaBT"
        android:text="@string/point"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.672"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <EditText
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="32dp"
        android:autofillHints="false"
        android:background="@null"
        android:inputType="none"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        tools:ignore="LabelFor" />
</androidx.constraintlayout.widget.ConstraintLayout>